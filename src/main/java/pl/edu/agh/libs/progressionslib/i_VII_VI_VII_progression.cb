import "src/main/java/pl/edu/agh/libs/chordslib/major_chord.cb";
import "src/main/java/pl/edu/agh/libs/chordslib/minor_chord.cb";

melody i_VII_VI_VII_progression(Note tonic, int rep, int duration) {
    Note n2 = tonic - 2;
    Note n3 = n2 - 2;

    for(int i=0; i<rep; i+=1) {
        PLAY minor_chord(tonic, duration);
        PLAY major_chord(n2, duration);
        PLAY major_chord(n3, duration);
        PLAY major_chord(n2, duration);
    }
}